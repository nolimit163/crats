<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<%= hook :inside_head do %>
<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
<%== meta_data_tags %>
<%= csrf_meta_tag %>
<%= javascript_include_tag 'jquery-1.4.2.min', 'jquery.validate.min.js', 'rails', 'application', :cache => 'jquery-core' %>
<% unless I18n.locale.to_s[0..1] == 'en' %>
  <%= javascript_include_tag ['localization/messages_', I18n.locale.to_s[0..1], '.js'].join %>
<% end %>
<%= yield :head %>
<link rel="stylesheet" href="/stylesheets/style_new.css" type="text/css" />
<% end %>

<body>
		<div class="wrapper">			
			<div class="mainwrapper">
				<div class="header">
					<div class="logo">
						<h1>
							<a href="/">Home</a>
						</h1>
					</div>
					<div class="tophead">
						<div class="topsection">
							<div class="global-nav">
								<ul>
									<li><a href="/">Home</a></li>
									<li><a >Service</a></li>
									<li><a >About us</a></li>
								</ul>
							</div>
							<div class="cartinfo">
								<ul>
									<li class="login"><a href="/login"> Log In </a></li>
								</ul>
							</div>
						</div>
					</div>
				</div><!-- header -->
				<div class="body-container clearfix">
					<div class="login-container">											
						<div class="loginbox">
						  <% if flash.notice %>
      <div class="flash notice"><div class="errorwrapper">
<ul><li><%= flash.notice %></li></ul></div></div>
      <% end %>
      <% if flash[:error] %>
      <div class="flash errors">
				<div class="errorwrapper">
					<ul><li><%= flash[:error] %></li></ul>
				</div>
			</div>
      <% end %>
							<%=yield%>
						</div>
					</div>
				</div><!-- body container -->
                <div class="footer">
            		<p class="copy-rights">Copyright Â© <a href="http://www.railsfactory.com" target="_blank" >Railsfactory</a>. 2012. All Rights Reserved</p>
                    <ul>
                    	<li><a href="/">Home</a></li><li>|</li>
                        <li><a href="/static_pages/aboutus" >About Us</a></li><li>|</li>
												<li><a href="/static_pages/terms">Terms &amp; Conditions</a></li>
                    </ul>
            	</div>
			</div>
		</div>
	</body>
</html>
