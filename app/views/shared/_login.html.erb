<%= form_for(:user, :url => user_session_path,:html=>{:id=>"login_form"}) do |f| %>          
							            <div class="fm-elements" id='password-credentials'>
							                <%= f.label(:email, t("email")) %>
							                <div class="input-wrap">
															<%= f.text_field('email', :class => 'title txt-fld required') %>
							                </div>
							            </div>
							            <div class="fm-elements" id='password-credentials'>
															<%= f.label :password, t("password") %><br />
							                <div class="input-wrap">
							               <%= f.password_field 'password', :class => 'title txt-fld required' %>
							                </div>
							            </div>
													<input type="hidden" value=<%=request.request_uri%> name="login_form_path">
							            <div class="fm-elements" id='password-credentials'>
															<%= f.check_box :remember_me, :class=>"check-box" %>
							                <p>Remember me</p>
							            </div>
							            <div class="fm-elements">
															<%= submit_tag t("log_in"), :class => 'button primary'%>
							            </div>
							        <% end %>
<script>
$(function(){
jQuery("#login_form").validate();
});
</script>