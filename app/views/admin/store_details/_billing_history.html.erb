

<table class="index" id='listing_plans'>
<h1><%=t(:Plan_Details)%><h1>
  <tr>
	<th><%=t("plan_name")%></th>
	<th><%=t("amount")%></th>
	<th><%=t("transaction_fee")%></th>
	<th><%=t("no_of_products")%></th>
	<th><%=t("payment_period")%></th>
	<th><%=t("payment_status")%></th>

	
	</tr>
   <tbody>

<tr>
<td><%=owner.pricing_plan.plan_name%></td>
<td><%=number_to_currency owner.pricing_plan.amount%></td>
<td><%=owner.pricing_plan.transaction_fee%></td>
<td><%=owner.pricing_plan.no_of_products%></td>
<td><%=owner.pricing_plan.payment_period%></td>
<td><%=owner.pricing_plan.is_active%></td>

</tr>

</tbody>
</table>
<table class="index" id='listing_plans'>
<h1><%=t(:Billing_History)%></h1>
   <tr>
	<th><%=t(:Billing_date)%></th>
	<th><%=t(:Amount)%></th>
	<th><%=t(:Transaction_id)%></th>
	<th><%=t(:Acknowledge)%></th>
	<th><%=t(:Message)%>s</th>
	</tr>
   <tbody>
<% billings.each do |billing| %>
<tr>
<td><%=billing.billing_date%></td>
<td><%=number_to_currency billing.amount%></td>
<td><%=billing.transaction_id%></td>
<%acknowledge=billing.acknowledge%>
<td><%=acknowledge%></td>
<td><%=billing.message%></td>
<!--
<td><%=link_to acknowledge,'#',:onclick=>"message_show('#{billing.id}','#{billing.message}')"%></td>
<span id="failure_billing_<%=billing.id%>">

</span>-->

</tr>

<%end%>
</tbody>
</table>
<% unless current_user.has_role?"admin"%>
<%else%>
<%=link_to "Back",admin_users_path%>
<%end%>
<script>
function message_show(id,message)
{

$("#failure_billing_"+id).html(message);
}

</script>